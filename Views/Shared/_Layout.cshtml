<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] KitabPasall</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KitabPasal.styles.css" asp-append-version="true" />
</head>
<body>
    <div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-yellow border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" >
                    <img src="/images/Logo.png" alt="Home" style="height:80px;"/>
                </a>
                    
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                    <div class="input-group w-50">
                        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                        <button type="button" class="btn btn-outline-primary">search</button>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
               </div>
               </nav>
               </header>
    <div class="mx-auto">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-yellow border-bottom box-shadow mb-3">
                <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item mr-2">
                        <a class="nav-link text-dark border border-0" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mr-2">
                        <a class="nav-link text-dark border border-0" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item mr-2">
                        <a class="nav-link text-dark border border-0" asp-area="" asp-controller="Availables" asp-action="Index">Available Books</a>
                        </li>
                        <li class="nav-item mr-2">
                        <a class="nav-link text-dark border border-0" asp-area="" asp-controller="Carts" asp-action="Index">Cart</a>
                        </li>
                        <li class="nav-item mr-2">
                        <a class="nav-link text-dark border border-0" asp-area="" asp-controller="Reviews" asp-action="Index">Leave a Review</a>
                        </li>
                        <div class="mt-3"></div>
                        
                    </ul>
                   
                </div>
            </div>
    </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted border border-2">
        <div class="container">
           Copyright &copy; 2024 - KitabPasall - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
